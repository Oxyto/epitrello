FROM oven/bun:1.3.7-alpine AS build
WORKDIR /app

COPY package.json bun.lock ./
RUN bun install --frozen-lockfile

COPY . .
RUN bun run build

FROM node:22-alpine AS runtime
WORKDIR /app
ENV NODE_ENV=production
ENV HOST=0.0.0.0
ENV PORT=3000

# Install only production dependencies for the runtime server.
COPY package.json bun.lock ./
RUN npm install -g bun@1.3.7 && bun install --frozen-lockfile --production

COPY --from=build /app/build ./build

EXPOSE 3000
CMD ["node", "build"]
